<?xml version="1.0" encoding="UTF-8"?>

<?language javascript?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import a.a.a.c.f.c.a.PeriodBox?>

<PeriodBox fx:id="fxml_field_box_period" stylesheets="@/css/custom.css" xmlns="http://javafx.com/javafx/8.0.121"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="a.a.a.c.f.a.a.EYX">
    <children>
        <HBox alignment="CENTER_RIGHT" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.hgrow="ALWAYS"
              GridPane.rowIndex="0" GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS">
            <Label fx:id="fxml_component_label_element" text="%micro.control.period.label"/>
            <Label fx:id="fxml_component_label_required_flag" styleClass="label-star"
                   text="%micro.user.requiredField.star"/>
            <GridPane.margin>
                <Insets right="10.0"/>
            </GridPane.margin>
        </HBox>
        <ComboBox fx:id="fxml_period_month" minHeight="35.0" prefHeight="35.0" prefWidth="300.0" styleClass="input"
                  GridPane.columnIndex="1" GridPane.rowIndex="0" PeriodBox.vgrow="ALWAYS">
            <GridPane.margin>
                <Insets left="5" right="10.0"/>
            </GridPane.margin>
        </ComboBox>
        <ComboBox fx:id="fxml_period_year" minHeight="35.0" prefHeight="35.0" prefWidth="300.0" styleClass="input"
                  GridPane.columnIndex="2" GridPane.rowIndex="0" PeriodBox.vgrow="ALWAYS"/>
        <Label fx:id="fxml_period_validation_error" styleClass="label-error" GridPane.columnIndex="1"
               GridPane.columnSpan="2" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets left="5" />
            </GridPane.margin>
        </Label>
    </children>
</PeriodBox>
